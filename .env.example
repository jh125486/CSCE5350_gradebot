# Local development environment variables
# Copy this file to .env and fill in your actual values

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Build ID for authentication
BUILD_ID=local-dev-build

# ===== FOR LOCAL TESTING WITH LOCALSTACK =====
# Uncomment these lines for local testing with LocalStack
# R2_ENDPOINT=http://localhost:4566
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test
# AWS_REGION=us-east-1
# USE_PATH_STYLE=true
# R2_BUCKET=test-gradebot-bucket

# ===== FOR PRODUCTION WITH CLOUDFLARE R2 =====
# Comment out the LocalStack lines above and uncomment these for production
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
AWS_ACCESS_KEY_ID=your_r2_access_key_id
AWS_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Optional: Override default bucket name
# R2_BUCKET=your-custom-bucket-name

# Optional: AWS Region (defaults to 'auto')
# AWS_REGION=auto

# Optional: Use path-style addressing (for LocalStack testing)
# USE_PATH_STYLE=false