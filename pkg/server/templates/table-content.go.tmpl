<div class="table-responsive">
<table id="submissions-table" class="table table-hover">
<thead>
<tr>
<th>Submission ID</th>
<th>Timestamp</th>
<th>Total Points</th>
<th>Awarded Points</th>
<th>Score</th>
<th>IP Address</th>
<th>Location</th>
</tr>
</thead>
<tbody>
{{range .Submissions}}
<tr>
<td><a href="/submissions/{{.SubmissionID}}" class="submission-link"><code class="submission-id">{{.SubmissionID}}</code> ðŸ”—</a></td>
<td><small>{{.Timestamp.Format "2006-01-02 15:04"}}</small></td>
<td>{{printf "%.1f" .TotalPoints}}</td>
<td>{{printf "%.1f" .AwardedPoints}}</td>
<td>
{{- if ge .Score 80.0 -}}
<span class="score-badge score-high">{{printf "%.1f%%" .Score}}</span>
{{- else if ge .Score 60.0 -}}
<span class="score-badge score-medium">{{printf "%.1f%%" .Score}}</span>
{{- else -}}
<span class="score-badge score-low">{{printf "%.1f%%" .Score}}</span>
{{- end -}}
</td>
<td><code class="submission-id">{{.IPAddress}}</code></td>
<td><small>{{.GeoLocation}}</small></td>
</tr>
{{end}}
</tbody>
</table>
</div>

